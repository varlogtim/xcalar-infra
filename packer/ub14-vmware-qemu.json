{
    "variables": {
        "user": "jenkins",
        "uid": "1000",
        "password": "jenkins",
        "disk_size": "100000",
        "output_directory": "output",
        "iso_url": "http://netstore.int.xcalar.com/isos/ubuntu-14.04.5-server-amd64.iso",
        "iso_md5": "dd54dc8cfc2a655053d19813c2f9aa9f",
        "name" : "jenkins-slave-ub14",
        "osver": "ub14"
    },
    "builders":
    [
        {
            "type": "qemu",
            "name": "{{user `name`}}-qemu-kvm",
            "format": "qcow2",
            "accelerator": "kvm",
            "disk_size": "{{ user `disk_size`}}",

            "iso_url": "{{ user `iso_url`}}",
            "iso_checksum": "{{ user `iso_md5`}}",
            "iso_checksum_type": "md5",

            "http_directory": "http",

            "ssh_username": "{{user `user`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "20m",
            "shutdown_command": "echo '{{user `password`}}'|sudo -S shutdown -P now",

            "output_directory": "{{ user `output_directory`}}-qemu-kvm",
            "boot_wait": "2s",
            "boot_command": [
                "<esc><esc><enter><wait><wait>",
                "/install/vmlinuz url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",

                "keyboard-configuration/modelcode=SKIP ",
                "keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA ",

                "passwd/user-fullname={{user `user`}} ",
                "passwd/user-password-again={{user `password`}} ",
                "passwd/user-password={{user `password`}} ",
                "passwd/username={{user `user`}} ",

                "initrd=/install/initrd.gz -- <enter>"
            ]
        },
        {
            "type": "vmware-iso",
            "vm_name": "{{user `name`}}-vmware",
            "headless": true,
            "boot_wait": "5s",
            "disk_size": "{{ user `disk_size`}}",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "passwd/user-fullname={{user `user`}} ",
                "passwd/user-password-again={{user `password`}} ",
                "passwd/user-password={{user `password`}} ",
                "passwd/username={{user `user`}} ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "shutdown_command": "echo '{{user `password`}}' | sudo -S -E shutdown -P now",
            "output_directory": "{{ user `output_directory`}}-vmware",
            "http_directory": "http",
            "iso_url": "{{ user `iso_url`}}",
            "iso_checksum": "{{ user `iso_md5`}}",
            "iso_checksum_type": "md5",
            "ssh_username": "{{ user `user`}}",
            "ssh_password": "{{ user `password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "guest_os_type": "ubuntu-64",
            "keep_registered": true,
            "tools_upload_flavor": "linux",
            "vmx_data": { "memsize": "16384", "numvcpus":"8"}
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "CONTAINER_USER={{user `user`}}",
                "CONTAINER_UID={{user `uid`}}"
            ],
            "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/start.sh",
                "scripts/update-{{user `osver`}}.sh",
                "scripts/packages-{{user `osver`}}.sh",
                "scripts/docker.sh",
                "scripts/{{user `user`}}.sh",
                "scripts/provision-{{user `osver`}}.sh",
                "scripts/network.sh",
                "scripts/finish.sh"
            ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "{{user `output_directory`}}-box/{{user `name`}}.box"
        },
        {
            "type": "vsphere-ova",
            "host":"10.10.1.4",
            "datacenter":"Datacenter/Xcalar/node6.int.xcalar.com",
            "username":"root",
            "password":"Welcome1",
            "datastore": "node6-4TB-2",
            "vm_folder":"Datacenter",
            "vm_network":"VM Network",
            "remove_floppy": "true",
            "remove_optical_drive": "true"
        }
    ]
}
