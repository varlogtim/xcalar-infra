                    "label": "sys"
                },
                {
                    "source": "_SYSTEM_STATS",
                    "xy_expr": "$.cpustats[?(CPU=all)][timestamp, usr]",
                    "color": "g",
                    "label": "usr"
                },
                {
                    "source": "_SYSTEM_STATS",
                    "xy_expr": "$.cpustats[?(CPU=all)][timestamp, iowait]",
